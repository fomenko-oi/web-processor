{% extends 'layout.html.twig' %}

{% set title = 'Yandex music hight quality sound downloader - Online' %}
{% set description = 'Download sound from music.yandex.ru in high quality.' %}
{% set keywords = 'Yandex music downloader, yandex music high quality song downloader' %}

{% block title %}{{ title }}{% endblock %}

{% block meta %}
    <meta name="description" content="{{ description }}">

    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:site_name" content="Yandex music downloader" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="{{ asset('images/cloud.png') }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:locale" content="{{ app.request.uri }}" />

    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "url": "{{ app.request.uri }}",
            "name": "{{ title }}",
            "description": "{{ description }}",
            "image": "{{ asset('images/cloud.png') }}",
            "keywords": "{{ keywords }}",
            "inLanguage": "{{ app.request.locale }}",
            "dateCreated": 2020,
            "isAccessibleForFree": true
        }
    </script>
{% endblock %}

{% block head %}
    <style>
        .info-image {
            height: 200px;
            background: url({{ asset('images/cloud_safe.png') }}) center center no-repeat;
            background-size: contain;
        }
    </style>

    <script>
        window.translations = {
            'app.title': 'App trans title',
        };
    </script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="card bg-warning text-black">
                <div class="card-body">
                    <div class="dashboard-info row">
                        <div class="primary-text col-md-7">
                            <h1 class="card-title">Yandex music downloader</h1>
                            <p>That service helps you to download songs from music.yandex.ru online</p>
                            <ul>
                                <li>Download without registration and payments.</li>
                                <li>High quality, 320 kbps songs.</li>
                                <li>Download premium songs without payed accout.</li>
                            </ul>
                            <a href="{{ path('yandex.index') }}" class="btn btn-primary m-t-xs">Check it out!</a>
                        </div>
                        <div class="col-md-4">
                            <div class="media">
                                <img src="{{ asset('images/cloud.png') }}" class="info-image" style="background-image: none">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="dashboard-info row">
                        <div class="primary-text col-md-12">
                            <h1 class="card-title">Write to us</h1>
                            <p>If you have any advices or question, you are free to write email to us.</p>
                            <p>We will response you as soon as possible.</p>

                            <a href="{{ path('contacts') }}" class="btn btn-warning m-t-xs">Contact form</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
